<% if flash[:notice].present? %>
  <div class="alert alert-success mb-3" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="card">
  <div class="card-header px-4 py-3 w-full">
    <div class="d-flex justify-content-between align-items-center ">
      <h3 class="">Employee lists</h3>
      <%= link_to "Create New Employee", new_document_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="px-4 py-4">
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Document type</th>
        <th scope="col">Employee Name</th>
        <th scope="col"></th>
      </tr>
      </thead>
      <tbody>
      <% @document.each do |document| %>
        <tr>
          <th scope="row"><%= document.id %></th>
          <td><%= document.name %></td>
          <td><%= document.doc_type %></td>
          <td><%= link_to document.employee.name, employee_path(document.employee) %></td>
          <td>
            <div class="row gap-1">
              <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Action
                </button>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "Edit", edit_document_path(document), class: "dropdown-item" %>
                  </li>
                  <li>
                    <%= link_to "View", document_path(document), class: "dropdown-item" %>
                  </li>
                  <li>
                    <%= link_to "Delete", document_path(document), class: "dropdown-item", method: :delete, data: {confirm: "Are you sure to delete this document?"} %>
                  </li>
                </ul>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>