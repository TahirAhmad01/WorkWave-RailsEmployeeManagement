<h1 class="mb-5 text-center">Employee Document info</h1>

<div class="card mb-3 p-4 flex flex-col gap-2">
    <div class="d-flex align-items-start gap-2">
      <h6>Name:</h6>
      <%= @document.name %>
    </div>
  <div class="d-flex align-items-start gap-2">
    <h6>Document Type:</h6>
    <%= @document.doc_type %>
  </div>
  <div class="d-flex align-items-start gap-2">
    <h6>Employee Name:</h6>
    <%= link_to @document.employee.name, employee_path(@document.employee) %>
  </div>
</div>

<%= link_to "Edit Document", edit_document_path(@document), class: "btn btn-primary" %>
<%= link_to "Delete Document", documents_path(@document), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure to delete this employee?"} %>
<%= link_to "Back to Document", documents_path, class: "btn btn-outline-primary" %>