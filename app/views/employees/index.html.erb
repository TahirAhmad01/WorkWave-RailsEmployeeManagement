<%= flash[:notice] %>
<div class="card">
  <div class="card-header px-4 py-3 w-full">
    <div class="d-flex justify-content-between align-items-center ">
    <h3 class="">Employee lists</h3>
    <%= link_to "Create New Employee", new_employee_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="px-4 py-4"><table class="table table-striped">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">email</th>
      <th scope="col">address</th>
    </tr>
    </thead>
    <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <th scope="row"><%= employee.id %></th>
        <td><%= employee.name %></td>
        <td><%= employee.personal_email %></td>
        <td><%= employee.full_address %></td>
      </tr>
    <% end %>
    </tbody>
  </table></div>
</div>