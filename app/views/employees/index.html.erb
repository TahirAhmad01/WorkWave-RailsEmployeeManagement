<% if flash[:notice].present? %>
  <div class="alert alert-success mb-3" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="card overflow-hidden">
  <div class="card-header px-4 py-3 w-full">
    <div class="d-flex justify-content-between align-items-center ">
      <h3 class="">Employee lists</h3>
      <div class="d-flex gap-1">
        <%= link_to "Create New Employee", new_employee_path, class: "btn btn-primary" %>
        <div class="dropdown">
          <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            View Type
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "Table", employees_path(view_type: "table"), class: "dropdown-item" %>
            </li>
            <li>
              <%= link_to "Accordion", employees_path(view_type: "accordion"), class: "dropdown-item" %>
            </li>
          </ul>
        </div>
      </div>

    </div>
  </div>

  <% if !params[:view_type].present? || params[:view_type] == "accordion" %>
    <%= render "employee_accordion_view", employees: @employees %>
  <% else %>
    <%= render "employee_table_view", employees: @employees %>
  <% end %>



</div>