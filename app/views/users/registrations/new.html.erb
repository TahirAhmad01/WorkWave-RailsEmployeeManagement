<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="d-flex justify-content-center">
    <div class="card w-50">
      <div class="card-header px-4 py-3 w-full">Sign Up</div>
      <div class="p-4">
        <form class="px-4 py-3">
          <div class="form-group">
            <%= f.label :email %><br/>
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "email@example.com" %>
          </div>
          <div class="form-group mt-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group mt-3">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "email", class: "form-control", placeholder: "email@example.com" %>
          </div>
          <%= f.submit "Sign up", class: "btn btn-primary mt-2" %>
        </form>

        <div class="dropdown-divider"></div>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
<% end %>